<div class="container m-4">
    <div class="row justify-content-start">
      <div class="col-4">
        <form class="login-form border border-3 border-light rounded pb-0 p-4 m-4 shadow">
          <div class="input-group mb-3">
            <label  class="input-group-text" for="email-login">email:</label>
            <input class="form-control" type="text" id="email-login" />
          </div>
          <div class="input-group mb-3">
            <label  class="input-group-text" for="password-login">password:</label>
            <input class="form-control" type="password" id="password-login" />
          </div>
          <div class="input-group mb-3">
            <button class="btn btn-primary" type="submit">login</button>
          </div>
        </form>
        </div>
        <div class="col-6">
        <form class="signup-form border border-3 border-light rounded pb-0 p-4 m-4 shadow">
          <div class="input-group mb-3">
            <label class="input-group-text" for="username-signup">username:</label>
            <input class="form-control" type="text" id="username-signup" />
          </div>
          <div class="input-group mb-3">
            <label class="input-group-text" for="email-signup">email:</label>
            <input class="form-control" type="text" id="email-signup" />
          </div>
          <div class="input-group mb-3">
            <label class="input-group-text" for="password-signup">password:</label>
            <input class="form-control" type="password" id="password-signup" />
          </div>
          <div class="input-group mb-3">
            <button class="btn btn-primary" type="submit">signup</button>
          </div>
        </form>
    </div>
  </div>   
</div>
